<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/txtProductName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:gravity="end"
        android:text="Add Product: "
        android:textAlignment="textEnd"
        android:layout_marginTop="40dp"
        app:layout_constraintEnd_toStartOf="@id/inputProductName"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/inputProductName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:textSize="14sp"
        android:padding="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/txtProductName"
        app:layout_constraintStart_toEndOf="@id/txtProductName"
        app:layout_constraintBottom_toBottomOf="@id/txtProductName"/>
    <Button
        android:id="@+id/submit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Submit"
        android:textSize="16sp"
        android:layout_margin="8dp"
        app:layout_constraintTop_toBottomOf="@id/inputProductName"
        app:layout_constraintStart_toStartOf="@id/txtProductName"
        app:layout_constraintEnd_toEndOf="@id/inputProductName" />


</androidx.constraintlayout.widget.ConstraintLayout>